<h5>
  The following resource elements are approved and funded for <%= @project.name %>;
  if you are out of or need to request more resources, please contact your support team for assistance.
</h5>

<ul>
  <li>CPUs remaining: <%= @project.cpus_remaining %></li>
  <li>Memory remaining: <%= @project.memory_remaining %>MB</li>
  <li>Storage remaining: <%= @project.storage_remaining %>GB</li>
  <li>Linux licenses remaining: <%= @project.linux_os_remaining %></li>
  <li>Windows licenses remaining: <%= @project.windows_os_remaining %></li>
</ul>

<%= form_for [@project, @vm], html: {class: 'vm_form'} do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name, required: true %>
      <%= f.label :cpus, 'CPUs' %>
      <%= f.text_field :cpus, type: :number, min: 1, max: @project.cpus_remaining, required: true %>
    </div>
    <div>
      <%= f.label :memory %>
      <span><%= f.text_field :memory, type: :number, min: 1, max: @project.memory_remaining, required: true %>MB</span>
      <%= f.label :storage %>
      <span><%= f.text_field :storage, type: :number, min: 1, max: @project.storage_remaining, required: true %>GB</span>
    </div>
    <div>
      <%= f.label :operating_system, 'OS' %>
      <span><%= f.select :operating_system, @project.available_operating_systems %></span>
    </div>
    <%= f.submit %>
<% end %>