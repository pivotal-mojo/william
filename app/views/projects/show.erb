<div class="flex-master">
  <%= render partial: 'project_status', locals: { project: @project } %>

  <%= form_for [@project, @vm], html: {class: 'tall card vm-form'} do |f| %>
      <div>
        <%= f.label :name %>
        <%= f.text_field :name, required: true %>
        <%= f.label :cpus, 'CPUs' %>
        <%= f.text_field :cpus, type: :number, min: 1, max: @project.cpus_remaining, required: true %>
      </div>
      <div>
        <%= f.label :memory %>
        <span><%= f.text_field :memory, type: :number, min: 1, max: @project.memory_remaining, required: true %>
          MB</span>
        <%= f.label :storage %>
        <span><%= f.text_field :storage, type: :number, min: 1, max: @project.storage_remaining, required: true %>
          GB</span>
      </div>
      <div>
        <%= f.label :operating_system, 'OS' %>
        <span><%= f.select :operating_system, @project.available_operating_systems %></span>
      </div>
      <%= f.submit %>
  <% end %>
</div>